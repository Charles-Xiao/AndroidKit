<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:Android="http://schemas.android.com/apk/res/android"> 
    <item Android:state_selected="true"> 
        <shape> 
            <!-- <gradient Android:angle="270" Android:endColor="@color/tab_pressed"
                Android:startColor="@color/tab_nopress" />  -->
            <solid Android:color="@color/tab_pressed" />
            <corners Android:radius="8dp" /> 
        </shape> 
    </item> 
    <item Android:state_pressed="true"> 
        <shape> 
           <!-- 渐变属性 <gradient Android:angle="270" Android:endColor="@color/tab_pressed"
                Android:startColor="@color/tab_nopress"/>  -->
            <solid Android:color="@color/tab_pressed" />
            <corners Android:radius="8dp" /> 
        </shape> 
    </item> 
    <!-- 默认未点击时的显示属性 -->
    <item>
        <shape> 
<!--             <gradient Android:angle="270" Android:endColor="@color/tab_pressed"
                Android:startColor="@color/tab_nopress"  />  -->
            <solid Android:color="@color/tab_nopress" />
            <corners Android:radius="8dp" /> 
        </shape> 
    </item> 
</selector> 
